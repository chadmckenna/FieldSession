<% form_for [:admin, @role] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :users_count %><br />
    <%= f.text_field :users_count %>
  </p>
  <p><%= f.submit %></p>
<% end %>
