- title "View caregiver: #{@user.first_name}"

#request-container
  %p
    = link_to "<span class='home icon'></span>Back to household", members_profile_path, :class => "pill button" unless !current_user.has_household?

  %p
    %strong First Name:
    =h @user.first_name
  %p
    %strong Last Name:
    =h @user.last_name
  %p
    %strong Phone Number:
    =h number_to_phone(@user.phone, :area_code => true)
  %p
    %strong Email Address:
    =h @user.email

  %p
    - if !current_user.has_household?
      = link_to "<span class='pen icon'></span>Edit", edit_members_user_path(current_user), :class => "pill button"
    - else
      = link_to "<span class='pen icon'></span>Edit this caregiver", edit_members_user_path(@user), :class => "pill button"
